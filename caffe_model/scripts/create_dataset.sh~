#!/usr/bin/env sh
# This script converts the mnist data into lmdb/leveldb format,
# depending on the value assigned to $BACKEND.

EXAMPLE=/home/nelson/TCC/caffe_model/
DATA=/home/nelson/TCC/caffe_model/train/
BUILD=/home/nelson/TCC/caffe_model/bin

BACKEND="lmdb"

echo "Creating ${BACKEND}..."

rm -rf $EXAMPLE/cnn_train_${BACKEND}
rm -rf $EXAMPLE/cnn_test_${BACKEND}

$BUILD/convert_data $DATA/train_data_ubyte \
  $DATA/train_label_ubyte $EXAMPLE/cnn_train_${BACKEND} --backend=${BACKEND}
#$BUILD/convert_mnist_data.bin $DATA/t10k-images-idx3-ubyte \
#  $DATA/t10k-labels-idx1-ubyte $EXAMPLE/mnist_test_${BACKEND} --backend=${BACKEND}

echo "Done."
